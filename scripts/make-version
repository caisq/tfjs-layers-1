// Run this script from the base directory (not the script directory):
// ./scripts/make-version

const fs = require('fs');

const packageJSON = JSON.parse(fs.readFileSync('package.json', 'utf8'));
const version = packageJSON.version;

const tfjsCoreDevDepVersion = packageJSON.devDependencies['@tensorflow/tfjs-core'];
const tfjsCorePeerDepVersion = packageJSON.peerDependencies['@tensorflow/tfjs-core'];
if (tfjsCoreDevDepVersion !== tfjsCorePeerDepVersion) {
  throw new Error(
      'Detected mismatch in @tensorflow/tfjs version in dev and peer dependencies: ' +
      tfjsCoreDevDepVersion + ' !== ' + tfjsCorePeerDepVersion);
}

const tag = `v${version}`;

const versionCode =
`/** @license See the LICENSE file. */

// This code is auto-generated, do not modify this file!
const version = '${version}';
export {version};
`

fs.writeFile('src/version.ts', versionCode, err => {
  if (err) {
    throw new Error(`Could not save version file ${version}: ${err}`);
  }
  console.log(`Version file for version ${version} saved sucessfully.`);
});
